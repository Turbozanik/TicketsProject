<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Train system</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <link rel="stylesheet" href="~/Content/flat-ui.min.css"/>
    <script type="text/javascript" src="~/Scripts/flat-ui.min.js"></script>

</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Train system", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Distination", "DistinationIndex", "Distination")</li>
                    <li>@Html.ActionLink("Purchase", "PurchaseIndex", "Purchase")</li>
                    <li>@Html.ActionLink("Route", "RouteIndex", "Route")</li>
                    <li>@Html.ActionLink("Train", "TrainIndex", "Train")</li>
                    <li>@Html.ActionLink("Roles", "AspNetRoleIndex", "AspNetRole")</li>
                    <li>@Html.ActionLink("Users", "AspNetUserIndex", "AspNetUser")</li>
                </ul>
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
